{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "options": {
        "swcrcPath": "infrastructure/.swcrc",
        "extensions": [".ts", ".tsx", ".js", ".jsx"]
      }
  }
}
